<Window
    x:Class="ClickShow.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ClickShow"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    Name="TheWindow"
    Title="ClickShow"
    Width="800"
    Height="450"
    MinWidth="250"
    MinHeight="100"
    ResizeMode="CanMinimize"
    SizeToContent="WidthAndHeight"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="20,10" >
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Vertical">

            <CheckBox
                Name="ChkStartWithWindows"
                Margin="5"
                VerticalContentAlignment="Center"
                Click="ChkStartWithWindows_OnClick"
                Content="随Windows启动 / Startup With Windows"
                ToolTip="是否开机自动启动" />

            <StackPanel Name="PnlSettings" DataContext="{Binding ElementName=TheWindow,Path=AppSetting}">
                <CheckBox
                Margin="5"
                VerticalContentAlignment="Center"
                Content="显示点击波纹特效 / Show Click Event"
                IsChecked="{Binding Path=EnableClickCircle}"
                ToolTip="点击时显示波纹特效" />


                <CheckBox
                Margin="5"
                VerticalContentAlignment="Center"
                Content="显示位置浮标提示 / Show Cursor Position"
                IsChecked="{Binding Path=EnableHoverDot}"
                ToolTip="在鼠标指针周围显示原点，跟随鼠标移动" />


                <GroupBox
                x:Name="IndicatorSetting"
                Margin="0,0,0,0"
                Header="参数设置">
                    <StackPanel Margin="10">
                        <TextBlock
                        Margin="0,0,0,0"
                        Text="波纹大小:" />
                        <local:MySlider
                        x:Name="IndicatorSizeSlider"
                        Margin="5"
                        AutoToolTipPlacement="BottomRight"
                        AutoToolTipPrecision="0"
                        Value="{Binding Path=IndicatorSize,Mode=OneTime}"
                        FinalValue="{Binding Path=IndicatorSize}"
                        IsSnapToTickEnabled="True"
                        Maximum="400"
                        Minimum="50"
                        TickFrequency="5"/>

                        <TextBlock
                        Margin="0,5,0,0"
                        Text="悬浮圈大小:" />

                        <local:MySlider
                        x:Name="HoverDotSizeSlider"
                        Margin="5"
                        AutoToolTipPlacement="BottomRight"
                        AutoToolTipPrecision="0"
                        Value="{Binding Path=HoverDotSize,Mode=OneTime}"
                        FinalValue="{Binding Path=HoverDotSize}"
                        IsSnapToTickEnabled="True"
                        Maximum="150"
                        Minimum="10"
                        TickFrequency="5" />

                        <Button Name="BtnClrLeft" Tag="Left" ></Button>
                        <!--<TextBlock
                        Margin="5,0,0,0"
                        FontWeight="Bold"
                        Text="波纹(悬浮圈)颜色:" />
                        <xctk:ColorPicker Name="ColorPicker" Margin="5,5,10,10" />
